{
    "name": "GTD for Google Tasksâ„¢",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Enable GTD Functionality to Google Tasks",
    "icons": {
	"64": "gtdExt-icon-64.bmp"
    },
    "background": {
	"scripts": [
	    "lib/utilities.js",
	    "gtdExt-engine.js"
	],
	"persistent": false
    },		
    "content_scripts": [ {
	"js": [
	    "gtdExt-client.js"
	],
	"matches": [
	    "https://mail.google.com/tasks/canvas*"
	],
	"run_at": "document_end"
    } ],
    "content_security_policy": "script-src https://*.google.com 'unsafe-eval'; object-src 'self'",
    "permissions": [
	"identity",
	"https://www.googleapis.com/*",
	"https://apis.google.com/*"
    ],
    "oauth2": {
	"client_id": "276059749769-k2cb4aolh55lo9ujb7e8r49prh45jek6.apps.googleusercontent.com",
	"scopes": [
	    "https://www.googleapis.com/auth/tasks"
	]
    }
}
